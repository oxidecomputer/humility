name = "demo-stm32g070-nucleo"
target = "thumbv6m-none-eabi"
chip = "../../chips/stm32g0"
memory = "memory-g070.toml"
board = "stm32g070"
stacksize = 944

[kernel]
name = "demo-stm32g0-nucleo"
requires = {flash = 18048, ram = 1632}
features = ["g070"]
stacksize = 640

[tasks.jefe]
bin-crate = "task-jefe"
priority = 0
max-sizes = {flash = 4096, ram = 512}
start = true
features = ["log-null"]
stacksize = 352
notifications = ["timer", "fault"]

[tasks.sys]
bin-crate = "drv-stm32xx-sys"
features = ["g070"]
priority = 1
max-sizes = {flash = 2048, ram = 256}
uses = ["rcc", "gpio", "system_flash"]
start = true
stacksize = 256
task-slots = ["jefe"]

[tasks.usart_driver]
bin-crate = "drv-stm32g0-usart"
features = ["g070"]
priority = 2
max-sizes = {flash = 4096, ram = 256}
uses = ["usart1"]
start = true
notifications = ["usart-irq"]
interrupts = {"usart1.irq" = "usart-irq"}
task-slots = ["sys"]
stacksize = 256

[tasks.idle]
bin-crate = "task-idle"
priority = 5
max-sizes = {flash = 128, ram = 64}
stacksize = 64
start = true
