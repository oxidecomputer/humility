name = "demo-ibex-super-system"
target = "riscv32imc-unknown-none-elf"
board = "ibex-super-system"
chip = "../../chips/ibex-super-system"
stacksize = 896

[kernel]
name = "demo-ibex-super-system"
requires = {flash = 16384, ram = 2048}
features = []

[outputs.flash]
address = 0x0010_0000
size = 0x4_0000 
read = true
write = false
execute = true

[outputs.ram]
address = 0x0014_0000
size = 0x4_0000 
read = true
write = true
execute = false  # let's assume XN until proven otherwise

[tasks.jefe]
name = "task-jefe"
priority = 0
requires = {flash = 8192, ram = 4096}
start = true
features = ["log-ringbuf"]
stacksize = 1536

[tasks.pong]
name = "task-pong"
priority = 3
requires = {flash = 8192, ram = 1024}
start = true

[tasks.ping]
name = "task-ping"
priority = 4
requires = {flash = 8192, ram = 1024}
stacksize = 512
start = true
task-slots = [{peer = "pong"}]

[tasks.idle]
name = "task-idle"
priority = 5
requires = {flash = 256, ram = 256}
stacksize = 256
start = true
