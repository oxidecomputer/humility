name = "demo-hifive-inventor"
target = "riscv32imc-unknown-none-elf"
board = "hifive-inventor"
chip = "../../chips/fe310-g003"
stacksize = 896

[kernel]
name = "demo-hifive-inventor"
requires = { flash = 16384, ram = 4096 }
features = []

# QSPI-0 flash (32MB), skipping the first 64k bootloader
[outputs.flash]
address = 0x20010000
size = 0x1FF0000
read = true
execute = true

# RAM sections are currently mapped into DTIM, a small but fast SRAM.
[outputs.ram]
address = 0x80000000
size = 16384
read = true
write = true
execute = false  # let's assume XN until proven otherwise

[tasks.jefe]
name = "task-jefe"
priority = 0
requires = { flash = 8192, ram = 2048 }
start = true
features = ["semihosting-riscv"]
stacksize = 1536

[tasks.rtc]
name = "drv-fe310-rtc"
priority = 1
requires = { flash = 8192, ram = 4096 }
start = true
features = ["semihosting-riscv"]
uses = ["aon_rtc"]
interrupts = { "aon_rtc.irq" = 1 }

[tasks.pong]
name = "task-pong"
priority = 3
requires = { flash = 8192, ram = 1024 }
start = true

[tasks.ping]
name = "task-ping"
priority = 4
requires = { flash = 8192, ram = 1024 }
stacksize = 512
start = true
task-slots = [{peer = "pong"}]

[tasks.idle]
name = "task-idle"
priority = 5
requires = { flash = 256, ram = 256 }
stacksize = 256
start = true
